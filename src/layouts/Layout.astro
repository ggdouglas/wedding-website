---
import { SEO } from 'astro-seo';

import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';

import '@fontsource/nunito-sans/400.css';
import '@fontsource/nunito-sans/600.css';
import '@fontsource/nunito-sans/700.css';

export interface Props {
  page?: string;
}

const { page } = Astro.props as Props;

const title = `Kristen & Greg${page ? ' | ' + page : ''}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <SEO
      title={title}
      description="Welcome to the wedding website of Kristen Sween and Greg Douglas. We're incredibly excited to gather with family and friends and celebrate."
    />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-WM1CW256XN"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-WM1CW256XN');
    </script>
  </head>
  <body class="bg-off-white text-stone-800 antialiased">
    <div class="flex min-h-screen flex-col items-center">
      <Header page={page || 'K&G'} />
      <main class="py-4">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
