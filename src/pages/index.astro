---
import Layout from '../layouts/Layout.astro';

import scroll from '../assets/scroll.gif';
---

<Layout title="Kristen & Greg">
  <div
    class="px-4 mx-auto my-3 sm:mt-13 sm:mb-5 font-bold uppercase text-3.5xl sm:text-4.5xl leading-tight text-center tracking-lg"
  >
    <div
      class="flex flex-col items-center divide-x-0 divide-y sm:divide-x sm:divide-y-0 sm:flex-row"
    >
      <div class="flex pb-5 px-9 sm:py-5 sm:pl-0 sm:pr-18 sm:w-80">
        March 11, 2023
      </div>
      <div class="flex pt-5 sm:pb-5 px-9 sm:pr-0 sm:py-5 sm:pl-18 sm:w-80">
        Columbus<br />OH
      </div>
    </div>
  </div>
  <div class="max-w-3xl px-5 m-auto md:p-0">
    <div class="flex flex-col items-center mt-12 mb-6 text-center">
      <div class="my-2">
        <h2
          class="mt-8 mb-2 text-2xl sm:text-3.5xl font-bold uppercase tracking-lg leading-none"
        >
          Wedding Day
        </h2>
        <div class="my-2 text-lg font-semibold sm:text-2xl tracking-sm">
          Saturday, March 11, 2023
        </div>
      </div>
      <div class="my-4 tracking-xs">
        <div class="my-1 text-sm sm:text-base">High Line Car House</div>
        <div class="my-1 text-sm sm:text-base">
          550 South High Street, Columbus, OH, 43215, United States
        </div>
      </div>
    </div>
  </div>
  <h3 class="mt-6 mb-4 text-xl font-semibold text-center sm:text-2xl">
    More info coming soon!
  </h3>
  <div class="max-w-xs p-4 mx-auto sm:max-w-sm">
    <img src={scroll} draggable="false" />
  </div>
</Layout>
