---
import { Image } from '@astrojs/image/components';

import Layout from '@layouts/Layout.astro';

import kg1 from '@assets/kg1.jpeg';
import hlchLogo from '@assets/hlch-logo.png';
---

<Layout>
  <Image src={kg1} />
  <div
    class="px-4 mx-auto my-3 sm:mt-13 sm:mb-5 font-bold uppercase text-3.5xl sm:text-4.5xl leading-tight text-center tracking-lg"
  >
    <div
      class="flex flex-col items-center justify-center divide-x-0 divide-y sm:divide-x sm:divide-y-0 divide-stone-400 sm:flex-row"
    >
      <div class="flex pb-5 px-9 sm:py-5 sm:pl-0 sm:pr-18 sm:w-80">
        March 11, 2023
      </div>
      <div class="flex pt-5 sm:pb-5 px-9 sm:pr-0 sm:py-5 sm:pl-18 sm:w-80">
        Columbus<br />OH
      </div>
    </div>
  </div>
  <div class="max-w-3xl px-5 m-auto md:p-0">
    <div class="flex flex-col items-center mt-12 mb-6 text-center">
      <div class="my-4 tracking-xs">
        <a href="https://www.highlinecarhouse.com" target="_blank">
          <Image
            class="border-2 border-stone-900 w-32 m-auto mb-4"
            src={hlchLogo}
            alt="High Line Car House"
          />
        </a>
        <div class="my-1 text-sm">550 South High Street</div>
        <div class="my-1 text-sm">Columbus, OH, 43215, United States</div>
      </div>
    </div>
  </div>
</Layout>
