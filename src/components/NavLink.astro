---
export interface Props {
  active: boolean;
  href: string;
  title: string;
}

const { active, href, title } = Astro.props as Props;
---

<li class="flex justify-center">
  <a
    class:list={[
      'p-2',
      'pb-1.5',
      'transition-colors',
      'duration-200',
      'border-b-2',
      'hover:border-current',
      active ? 'border-current' : 'border-transparent',
    ]}
    href={href}
  >
    {title}
  </a>
</li>
